l=[]
for i in range(1,21):
    l.append(i)
sum_even=0
sum_odd=0
for i in l:
    if i%2==0:
        sum_even+=1
    else:
        sum_odd+=1
mean=(sum_even+sum_odd)/2
if len(l)%2!=0:
    median=l[int((len(l)+1)/2)]
else:
    median=(l[int(len(l)/2)]+l[int(len(l)/2+1)])/2
s_d=0
for i in l:
    s_d+=abs(mean-i)
s_d=s_d/len(l)
print("mean",mean)
print("median",median)
print("standard deviation",s_d)
